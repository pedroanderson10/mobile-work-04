<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trabalho_04">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trabalho_04">
        <activity android:name=".ChatGrupoActivity"
            android:label="@string/chatGrupo">

            <!-- Definir qual a activity pai da activity Chat em grupo -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MensagensActivity" />
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="Chat">

            <!-- Definir qual a activity pai da activity Chat -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MensagensActivity" />
        </activity>
        <activity
            android:name=".ContatosActivity"
            android:label="@string/Contatos">

            <!-- Definir qual a activity pai da activity Contatos -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MensagensActivity" />
        </activity>
        <activity
            android:name=".MensagensActivity"
            android:label="Lista de conversas">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadastroActivity"
            android:label="Cadastro">

            <!-- Definir qual a activity pai da activity Contatos -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>